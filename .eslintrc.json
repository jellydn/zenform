{
  "extends": [
    "standard", 
    "standard-react", 
    "prettier", 
    "prettier/standard", 
    "plugin:jest/recommended", 
    "plugin:flowtype/recommended" 
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "plugins": ["flowtype", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  }
}
